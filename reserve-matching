<script>
  let dbExcel = [], ocrText = "";
  const normId = (id) => String(id || "").trim().replace(/^0+/, "");
  const norm = (s) => String(s || "").trim().replace(/\s/g, "");
  const timeRegex = /\d{1,2}[:ì‹œ]\d{2}/g; // HH:mm ë˜ëŠ” HHì‹œmm í˜•íƒœ ì¶”ì¶œ

  window.addEventListener("dragover", e => e.preventDefault());
  window.addEventListener("drop", e => e.preventDefault());

  function toggleExample() {
    const modal = document.getElementById('exampleModal');
    modal.style.display = modal.style.display === 'flex' ? 'none' : 'flex';
  }

  // 1. ì—‘ì…€ ì²˜ë¦¬
  document.getElementById('inputExcel').onchange = (e) => handleExcel(e.target.files[0]);
  const handleExcel = (file) => {
    const reader = new FileReader();
    reader.onload = (ev) => {
      const wb = XLSX.read(new Uint8Array(ev.target.result), { type: 'array' });
      const raw = XLSX.utils.sheet_to_json(wb.Sheets[wb.SheetNames[0]], { header: 1, defval: "" });
      const tags = { 
        id: ['ì°¨íŠ¸ë²ˆí˜¸','ì± íŠ¸ë²ˆí˜¸','ë“±ë¡ë²ˆí˜¸','í™˜ìë²ˆí˜¸'], 
        name: ['ì„±ëª…','ìˆ˜ì§„ìëª…','í™˜ìëª…','ì´ë¦„'],
        memo: ['ì˜ˆì•½ë©”ëª¨','ë©”ëª¨','ë¹„ê³ ','êµ¬ë¶„','ì˜ˆì•½ë‚´ìš©'],
        time: ['ì˜ˆì•½ì‹œê°„','ì‹œê°„','ì‹œê°','ì˜ˆì•½ì‹œê°']
      };
      let map = null, startIdx = 0;
      for (let i=0; i<Math.min(raw.length, 20); i++) {
        const row = raw[i]; if(!row) continue;
        const tempMap = {};
        row.forEach((cell, idx) => {
          const c = norm(cell);
          for(let k in tags) if(tags[k].includes(c)) tempMap[k] = idx;
        });
        if(tempMap.id !== undefined) { map = tempMap; startIdx = i+1; break; }
      }
      if(map) {
        dbExcel = raw.slice(startIdx).map(r => ({
          id: normId(r[map.id]),
          name: norm(r[map.name]),
          memo: String(r[map.memo] || "ë‚´ìš©ì—†ìŒ"),
          time: String(r[map.time] || "-")
        })).filter(it => it.id);
        document.getElementById('logExcel').innerText = `âœ… ${dbExcel.length}ê±´ ë¡œë“œ ì™„ë£Œ`;
        runMatching();
      }
    };
    reader.readAsArrayBuffer(file);
  };

  // 2. OCR ì²˜ë¦¬ (ë¶™ì—¬ë„£ê¸°/í´ë¦­)
  document.getElementById('inputOcr').onchange = (e) => handleOcr(e.target.files[0]);
  window.addEventListener('paste', e => {
    const item = Array.from(e.clipboardData.items).find(x => x.type.indexOf('image') !== -1);
    if (item) handleOcr(item.getAsFile());
  });

  const handleOcr = async (file) => {
    const loader = document.getElementById('loader');
    const preview = document.getElementById('ocrPreview');
    loader.style.display = "block";
    preview.src = URL.createObjectURL(file);
    preview.style.display = "inline-block";
    const worker = await Tesseract.createWorker('kor+eng');
    const { data: { text } } = await worker.recognize(file);
    await worker.terminate();
    ocrText = text;
    loader.style.display = "none";
    runMatching();
  };

  // 3. ëŒ€ì¡° ë¡œì§ (ì‹œê°„ ëŒ€ì¡° ì¶”ê°€)
  function runMatching() {
    if (dbExcel.length === 0 || !ocrText) return;
    const body = document.getElementById('resBody'); body.innerHTML = "";
    document.getElementById('resCard').style.display = "block";
    document.getElementById('downloadBtn').style.display = "flex";
    
    const ocrTokens = norm(ocrText);
    const ocrTimes = ocrText.match(timeRegex) || []; // ìŠ¤ìƒ·ì—ì„œ ëª¨ë“  ì‹œê°„ ì¶”ì¶œ

    dbExcel.forEach(item => {
      const isPresent = ocrTokens.includes(item.id) || ocrTokens.includes(item.name);
      const isTarget = item.memo.includes("ë„ìˆ˜") || item.memo.includes("ì¶©ê²©íŒŒ");
      
      // ìŠ¤ìƒ· ë‚´ ì‹œê°„ í™•ì¸ (ì „ì‚° ì‹œê°„ HH:mmì´ ìŠ¤ìƒ· í…ìŠ¤íŠ¸ì— ìˆëŠ”ì§€)
      const cleanTime = item.time.replace(/[:ì‹œ]/g, "");
      const isTimePresent = ocrTokens.includes(cleanTime) || ocrTimes.some(t => t.replace(/[:ì‹œ]/g, "") === cleanTime);

      let res = "", status = "ok", rowClass = "";
      if (isPresent) {
        res = isTimePresent ? "ì •ìƒ í™•ì¸" : "ì •ë³´ ì¼ì¹˜ (ì‹œê°„ ë¶ˆëª…í™•)";
        status = "ok";
      } else {
        if (isTarget) {
          res = "ìŠ¤í”„ë ˆë“œì‹œíŠ¸ ëˆ„ë½ (ë„ìˆ˜/ì¶©ê²©íŒŒ)"; status = "err"; rowClass = "row-err";
        } else {
          res = "ê¸°íƒ€ ì˜ˆì•½ (ì§„ë£Œ/ì£¼ì‚¬ ë“±)"; status = "other"; rowClass = "row-other";
        }
      }

      const tr = document.createElement('tr');
      tr.className = rowClass; tr.dataset.error = (status === "err");
      tr.innerHTML = `
        <td>${item.time}</td><td>${item.id}</td><td>${item.name}</td>
        <td style="text-align:left;">${item.memo}</td>
        <td>${isTimePresent ? 'âœ… í™•ì¸' : 'âŒ í™•ì¸ë¶ˆê°€'}</td>
        <td><span class="badge ${status==='ok'?'bg-blue':(status==='err'?'bg-red':'bg-gray')}">${res}</span></td>
      `;
      body.appendChild(tr);
    });
    applyFilter();
  }

  function applyFilter() {
    const onlyErr = document.getElementById('errToggle').checked;
    document.querySelectorAll('#resBody tr').forEach(tr => {
      tr.classList.toggle('hidden', onlyErr && tr.dataset.error === 'false');
    });
  }

  // 4. ëˆ„ë½ ëª…ë‹¨ ì—‘ì…€ ì €ì¥
  function downloadMissingExcel() {
    const missingData = [];
    document.querySelectorAll('#resBody tr').forEach(tr => {
      if (tr.dataset.error === "true") {
        const cells = tr.querySelectorAll('td');
        missingData.push({
          "ì˜ˆì•½ì‹œê°„": cells[0].innerText,
          "ì°¨íŠ¸ë²ˆí˜¸": cells[1].innerText,
          "í™˜ìëª…": cells[2].innerText,
          "ì˜ˆì•½ë©”ëª¨": cells[3].innerText,
          "íŒë…ê²°ê³¼": "ëˆ„ë½"
        });
      }
    });

    if (missingData.length === 0) { alert("ëˆ„ë½ëœ ëª…ë‹¨ì´ ì—†ìŠµë‹ˆë‹¤."); return; }
    const ws = XLSX.utils.json_to_sheet(missingData);
    const wb = XLSX.utils.book_new();
    XLSX.utils.book_append_sheet(wb, ws, "ëˆ„ë½ëª…ë‹¨");
    XLSX.writeFile(wb, `JINSUL_ëˆ„ë½ëª…ë‹¨_${new Date().toLocaleDateString()}.xlsx`);
  }
</script>
</body>
